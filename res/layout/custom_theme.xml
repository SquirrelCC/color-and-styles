<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CustomTheme" >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <LinearLayout
        android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent" >

    <TextView android:id="@+id/textView3"
        style="@style/MyTextStyle"
        android:layout_marginTop="8dp"
        android:text="@string/large_text" />

    <Button android:id="@+id/button1"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Button 1"
        android:background="@drawable/button_states_yellowgreen"
        android:onClick="click1" />
    
    <Button android:id="@+id/button2"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Button 2"
        android:background="@drawable/button_army_glossy"
        android:onClick="click1" />
    
    <Button android:id="@+id/button3"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Button 3"
        android:background="@drawable/button_states_green"
        android:onClick="click1" />
    
    <Button android:id="@+id/button4"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Button 4"
        android:background="@drawable/button_states_blue"
        android:onClick="click1" />
    
    <Button android:id="@+id/button5"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Button 5"
        android:background="@drawable/button_states_bluepink"
        android:onClick="click1" />
    
    <Button android:id="@+id/button6"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Button 6"
        android:background="@drawable/button_states_pink"
        android:onClick="click1" />
    
    <Button android:id="@+id/button7"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Button 7"
        android:background="@drawable/button_states_black"
        android:onClick="click1" />
    
    <Button android:id="@+id/button8"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/more"
        android:background="@drawable/button_states_white"
        android:onClick="click1" />
    
    </LinearLayout>
    </ScrollView>

</LinearLayout>